# MovieBonus Frontend Environment Configuration
# Copy this file to .env.local and update the values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_NODE_API_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_DEBUG=true

# Test Authentication (for development)
# Set to 'true' to enable test authentication in production
# Leave empty or set to 'false' to use default behavior (enabled in dev, disabled in prod)
NEXT_PUBLIC_ENABLE_TEST_AUTH=

# Build Configuration
NODE_ENV=development