# MovieBonus Frontend Environment Variables
# Copy this file to .env.local and update the values

# API Configuration
NEXT_PUBLIC_API_URL=https://your-python-scrapers-service.run.app
NEXT_PUBLIC_API_TIMEOUT=30000

# Node.js Backend Configuration (for Admin)
NEXT_PUBLIC_NODE_API_URL=http://localhost:3000

# n8n Webhook Configuration
NEXT_PUBLIC_N8N_WEBHOOK_URL=http://localhost:5678/webhook/process-facebook-link

# Application Settings
NEXT_PUBLIC_APP_NAME=特典速報
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=production

# Feature Flags
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_CACHE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Supabase Configuration (For user feedback only)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Admin Configuration
# Note: Admin authentication now uses Node.js backend
# Admin users are managed through the Node.js admin API

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX